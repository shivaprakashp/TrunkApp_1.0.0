<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnEmbedUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Open Embed URL"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnItunesUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        tools:text="Open Itunes Url"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnOpenApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appleMusicOpen"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnBuyTickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/appleBuyTicket" />

    <WebView
        android:id="@+id/webBuyTickets"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"></WebView>
</RelativeLayout>