<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/loyalty_points_background"
        android:gravity="center"
        android:layout_marginTop="@dimen/app_margin_thirty"
        android:layout_marginBottom="@dimen/app_margin_thirty"
        android:layout_marginLeft="@dimen/app_margin_sixty"
        android:layout_marginRight="@dimen/app_margin_sixty">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_height_large"
            android:src="@drawable/ic_dubai_opera_logo"/>

        <com.opera.app.customwidget.TextViewWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/label_white_vlarge"
            android:layout_marginTop="@dimen/app_margin_five"
            android:text="4450"
            font:name="Montserrat-Light"/>

        <com.opera.app.customwidget.TextViewWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loyalty_points"
            style="@style/label_white_medium"
            font:name="Montserrat-Light"/>

    </LinearLayout>

</LinearLayout>