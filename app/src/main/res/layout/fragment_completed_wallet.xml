<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.opera.app.fragments.wallet.TodayWalletFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <com.opera.app.fragments.wallet.helper.TodayWalletView
                android:id="@+id/helperWalletEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_testing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Testing"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.opera.app.customwidget.TextViewWithFont
            android:id="@+id/txtWalletEventTitle"
            style="@style/label_white_vlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/walletDataNotAvail"
            font:name="Montserrat-Light" />
    </RelativeLayout>

</ScrollView>
