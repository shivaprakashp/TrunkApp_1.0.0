<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_dubai_opera_logo" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/transparent_white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <include
                        android:id="@+id/reg_edtFirstName"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <include
                        android:id="@+id/reg_edtLastName"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />


                    <include
                        android:id="@+id/reg_edtEmail"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <include
                        android:id="@+id/reg_edtPassword"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <include
                        android:id="@+id/reg_edtRePass"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />


                    <com.opera.app.customwidget.CustomSpinner
                        android:id="@+id/spinnerNationality"
                        style="@style/label_black"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        font:name="Montserrat-Regular"
                        app:hintText="@string/nationality"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <include
                        android:id="@+id/reg_edtDob"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <include
                        android:id="@+id/reg_edtMobile"
                        layout="@layout/include_mobile_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <include
                        android:id="@+id/reg_edtCity"
                        layout="@layout/include_edittext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <com.opera.app.customwidget.CustomSpinner
                        android:id="@+id/spinnerState"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        font:name="Montserrat-Regular"
                        app:hintText="@string/state"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray" />

                    <com.opera.app.customwidget.CustomSpinner
                        android:id="@+id/spinnerCountry"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        font:name="Montserrat-Regular"
                        app:hintText="@string/country"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_checkbox" />

            <com.opera.app.customwidget.TextViewWithFont
                android:id="@+id/txtTermsCondition"
                style="@style/label_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/reg_terms_policy"
                font:name="Montserrat-Light"        />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckbNewsLetters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_checkbox" />

            <com.opera.app.customwidget.TextViewWithFont
                style="@style/label_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/check_subscribe"
                font:name="Montserrat-Light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.opera.app.customwidget.ButtonWithFont
                android:id="@+id/btnCreateAccount"
                style="@style/label_white_medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/btn_ripple_effect"
                android:text="@string/create_account"
                android:textAllCaps="false"
                font:name="Montserrat-Light" />

            <com.opera.app.customwidget.ButtonWithFont
                android:id="@+id/btnLogin"
                style="@style/label_white_medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_btn_ripple"
                android:text="@string/already_have_an_account"
                android:textAllCaps="false"
                font:name="Montserrat-Light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/include_guest" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>