<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/progressImageLoader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-150dp"
        android:layout_marginTop="200dp"
        android:background="@color/transparent_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTransparentBurgendy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <com.opera.app.customwidget.TextViewWithFont
                        style="@style/label_light_gray_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Tickets From"
                        font:name="Montserrat-Light" />

                    <com.opera.app.customwidget.TextViewWithFont
                        android:id="@+id/txtTicketPrice"
                        style="@style/label_white_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textStyle="bold"
                        font:name="Montserrat-Light" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.opera.app.customwidget.ButtonWithFont
                        android:id="@+id/mBtnPlayVideo"
                        style="@style/label_white_small"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_medium"
                        android:background="@drawable/transparent_btn_ripple"
                        android:drawableLeft="@drawable/ic_play_button"
                        android:paddingLeft="10dp"
                        android:text="@string/video"
                        font:name="Montserrat-Light" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/linearShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_share" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08">

                    <ImageView
                        android:id="@+id/imgFavourite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favourite" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTransparentBurgendy" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerGenres"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:orientation="horizontal"></android.support.v7.widget.RecyclerView>

            <ScrollView
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:fillViewport="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/expandableTextViewInfo"
                    style="@style/label_white_small"
                    android:layout_width="fill_parent"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:layout_weight="1.0"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:text="" />

            </ScrollView>

            <com.opera.app.customwidget.ButtonWithFont
                android:id="@+id/btnBuyTickets"
                style="@style/label_white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/btn_ripple_effect"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/buy_tickets"
                android:textAllCaps="false"
                font:name="Montserrat-Light" />

            <TextView
                style="@style/label_white_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="3"
                android:text=""
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBurgendy"
                android:orientation="vertical">

                <com.opera.app.customwidget.TextViewWithFont
                    style="@style/label_light_gray_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/you_also_like"
                    font:name="Montserrat-Light" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpagerFavGenres"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:rotation="90"
                android:src="@drawable/ic_down_arrow" />

            <com.opera.app.customwidget.TextViewWithFont
                android:id="@+id/txtHeaderEventName"
                style="@style/label_light_gray_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                font:name="Montserrat-Light" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_calendar_white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_wallet_big" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_profile" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>