<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearToolbarParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBurgendy">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCommonToolBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrrow"
            android:rotationY="@integer/locale_mirror_flip"
            android:padding="@dimen/app_margin_ten"
            android:visibility="gone"/>

        <com.opera.app.customwidget.TextViewWithFont
            android:id="@+id/txtCommonToolHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/home"
            android:gravity="center"
            style="@style/label_white_large"
            font:name="Montserrat-Light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/img_plan_visit"
                android:layout_width="@dimen/app_width_large"
                android:layout_height="@dimen/app_height_large"
                android:src="@drawable/ic_calendar_white"
                android:padding="@dimen/app_margin_ten"
                android:layout_gravity="right|center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_wallet"
                android:layout_width="@dimen/app_width_large"
                android:layout_height="@dimen/app_height_large"
                android:src="@drawable/ic_wallet"
                android:padding="@dimen/app_margin_ten"
                android:layout_gravity="right|center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/app_width_large"
                android:layout_height="@dimen/app_height_large"
                android:src="@drawable/ic_profile"
                android:padding="@dimen/app_margin_ten"
                android:layout_gravity="right|center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="@dimen/app_width_medium"
                android:layout_height="@dimen/app_width_medium"
                android:src="@drawable/ic_search"
                android:padding="@dimen/app_margin_ten"
                android:layout_gravity="right|center"
                android:visibility="gone"/>
        </LinearLayout>


    </FrameLayout>
</LinearLayout>