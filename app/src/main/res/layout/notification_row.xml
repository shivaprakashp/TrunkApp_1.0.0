<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/burgandy_corner"
    android:layout_height="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mImgRestaurantImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ProgressBar
            android:id="@+id/progressImageLoader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <com.opera.app.customwidget.TextViewWithFont
                    android:id="@+id/mTxtRestaurantName"
                    style="@style/label_black_vlarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/profile_name"
                    font:name="Montserrat-Light" />

                <com.opera.app.customwidget.TextViewWithFont
                    android:id="@+id/mTxtRestaurantPlace"
                    style="@style/label_black_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/profile_name"
                    font:name="Montserrat-Light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="vertical">

                <com.opera.app.customwidget.TextViewWithFont
                    style="@style/label_burgendy_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    font:name="Montserrat-Light" />

                <com.opera.app.customwidget.TextViewWithFont
                    style="@style/label_burgendy_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aed"
                    font:name="Montserrat-Medium" />

                <com.opera.app.customwidget.TextViewWithFont
                    android:id="@+id/mTxtAedvalue"
                    style="@style/label_burgendy_vvlarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="75"
                    font:name="Montserrat-Bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>