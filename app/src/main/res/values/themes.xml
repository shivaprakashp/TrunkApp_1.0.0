<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorBurgendy</item>
        <item name="colorPrimaryDark">@color/colorBurgendy</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>

    </style>

    <style name="common_btn_style" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_ripple_effect</item>
    </style>

    <style name="transparent_btn_style" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/transparent_btn_ripple</item>
    </style>
</resources>
